@model IEnumerable<Vendor>
@{
    ViewData["Title"] = "VendorsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Vendors List</h6>

            <div class="dropdown no-arrow" style="float:right">
                <input type="button" class="btn btn-success btn-sm" value="Add New Vendor" id="AddNewButton"/>

            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="display:none"></th>
                            <th>Vendor Name</th>
                            <th>Phone Number</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ foreach (var item in Model)
                            {
                                <tr>
                                    <td style="display:none">@item.VendorId</td>
                                    <td>@item.Name</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <form asp-controller="Vendors" asp-action="DeleteVendorById">
                                            <input type="hidden" name="vendorId" value="@item.VendorId" />
                                            <input type="submit" class="btn btn-danger btn-sm" name="delete" value="Delete" />
                                            <input type="button" class="btn btn-info btn-sm editButton" value="Edit" />

                                        </form>

                                    </td>
                                </tr>
                            } }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*vendor modal*@
    <div class="modal fade" id="AddNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="Vendors" asp-action="AddNewVendor">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Vendor Information</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="vendorId" id="vendorId" />

                        <div class="form-group row">
                            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputName" name="Name" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPhone" class="col-sm-2 col-form-label">Phone Number</label>
                            <div class="col-sm-10">
                                <input type="Number" maxlength="13" class="form-control" id="inputPhone" name="PhoneNumber" placeholder="Phone Number">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary btn-sm" type="button" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-primary btn-sm" name="Save" value="Save" />

                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts{ 
    <script>
        $(document).ready(function () {

       

            $('#AddNewButton').on('click', function () {
                ClearField();
                $('#AddNew').modal();
                //alert('clicked');
            });


            $('.editButton').on('click', function () {
                ClearField();
                $('#AddNew').modal();
                var vendorId = $(this).closest('tr').children('td:eq(0)').text();
                var vendorName = $(this).closest('tr').children('td:eq(1)').text();
                var vendorPhoneNumber = $(this).closest('tr').children('td:eq(2)').text();

                $('#vendorId').val(vendorId);
                $('#inputName').val(vendorName);
                $('#inputPhone').val(vendorPhoneNumber);

            });
            function ClearField() {
                $('#vendorId').val('');
                $('#inputName').val('');
                $('#inputPhone').val('');
            }
        });
    </script>
    } 